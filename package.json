{
  "name": "ai-chat-shortcut",
  "description": "在搜索栏输入 @chat 立刻向你喜欢的 AI 提问，支持多种 Chat，包括 OpenAI、Claude、Gemini。",
  "private": true,
  "version": "0.1.3",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "postinstall": "wxt prepare"
  },
  "devDependencies": {
    "@tsconfig/svelte": "^5.0.4",
    "@types/node": "^22.7.4",
    "@wxt-dev/module-svelte": "^1.0.0",
    "autoprefixer": "^10.4.20",
    "svelte": "^4.2.18",
    "svelte-check": "^3.8.4",
    "tailwindcss": "^3.4.9",
    "tslib": "^2.6.3",
    "typescript": "^5.5.4",
    "wxt": "^0.19.1"
  },
  "dependencies": {
    "@liuli-util/async": "^3.7.0",
    "@webext-core/messaging": "^1.4.0",
    "bits-ui": "^0.21.15",
    "clsx": "^2.1.1",
    "mode-watcher": "^0.4.1",
    "svelte-radix": "^1.1.1",
    "tailwind-merge": "^2.5.2",
    "tailwind-variants": "^0.2.1"
  }
}
